{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "noEmitOnError": false,
    "noCheck": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": false
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
